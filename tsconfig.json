{
  "compilerOptions": {
    "rootDirs": ["./miniprogram"],
    "outDir": "miniprogram_dist", // 编译发布时所用，输出目录
    "declaration": true, // 编译发布时所用，生成.d.ts文件
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strict": true,
    "removeComments": false,
    "pretty": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "lib": [
	    "ES2020",
	    "dom"
    ],
    "typeRoots": ["./typings"]
  },
  "include": ["./miniprogram/**/*.ts"],
  "exclude": ["node_modules","typings"]
}
